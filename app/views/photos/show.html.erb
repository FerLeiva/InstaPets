<% content_for :title do %>
<%= @photo.name %>
<% end %>
<div class="px-3 py-2 my-4 text-center">
	<h1> <%= @photo.name %></h1>

	<img src=<%= @photo.url %> alt=<%= @photo.name %> height="300">

	<div class="container-info">
		<h6> <%= t('.user') %>: </h6>
		<p> <%= @photo.user.email %> </p>
	</div>

	<% if @photo.description != '' %>
		<h2> <%= t('.description') %> </h2>
		<p> <%= @photo.description %> </p>
	<% end %>
	

	<% if @photo.user == current_user %>
		<%= link_to 'Edit', edit_photo_path %>
	<br> <br>
		<%= button_to 'Delete', photo_path, method: :delete, :onclick => "return confirm('Are you sure you want to delete this photo?')" %>
	<% end %>
</div>