<div class="px-3 py-2 my-4 text-center">
	<h1> <%= t('.title') %> </h1>
	<p> <%= t('.description') %> </p>
</div>

<div class="px-3 py-2 my-4 text-center">
	<% if @photos.any? %>
		<h2> <%= t('.subtitle') %> </h2>
		<br>
		<%= render partial: 'photos/photos_loop', object: @photos %>
	<% else %>
		<p> <%= t('.subtitle2') %> </p>
	<% end %>
</div>

